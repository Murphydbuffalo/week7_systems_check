<h3> Add A Car </h3>

<%= form_for @car do |f| %>
  <%= f.label :model %>:
  <%= f.text_field :model_name %>

  <%= f.label :manufacturer %>:
  <%= f.collection_select :manufacturer_id, Manufacturer.all, :id, :name %>

  <%= f.label :year %>:
  <%= f.text_field :year %>

  <%= f.label :mileage %>:
  <%= f.text_field :mileage %>

  <%= f.label :color %>:
  <%= f.text_field :color %>

  <%= f.label :description %>:
  <%= f.text_area :description %>

  <%= f.submit :'Add Car' %>
<% end %>
